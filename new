import time
import serial
import pynmea2
import RPi.GPIO as GPIO
from RPLCD.i2c import CharLCD

# --- CONFIGURATION ---
TARGET_PHONE_NUMBER = "+919876543210"  # ðŸš¨ Replace with actual number

MQ3_D0_ALARM_THRESHOLD = GPIO.LOW
TEST_WINDOW = 5

# --- PIN SETUP ---
RELAY_PIN = 23
LED_PIN = 24
MQ3_D0_PIN = 18

GPS_PORT = "/dev/ttyAMA3"
GSM_PORT = "/dev/serial0"

# --- RELAY TYPE: SET THIS BASED ON YOUR TEST ---
# If relay clicks ON at LOW -> Active-Low (most common)
# If relay clicks ON at HIGH -> Active-High
RELAY_ACTIVE_LOW = True   # ðŸ‘ˆ CHANGE ONLY IF TEST SHOWS OTHERWISE

if RELAY_ACTIVE_LOW:
    RELAY_LOCKED_STATE = GPIO.HIGH      # Locked = Relay OFF
    RELAY_UNLOCKED_STATE = GPIO.LOW     # Unlocked = Relay ON
else:
    RELAY_LOCKED_STATE = GPIO.LOW
    RELAY_UNLOCKED_STATE = GPIO.HIGH

# --- GPIO SETUP ---
GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)
GPIO.setup(RELAY_PIN, GPIO.OUT)
GPIO.setup(LED_PIN, GPIO.OUT)
GPIO.setup(MQ3_D0_PIN, GPIO.IN, pull_up_down=GPIO.PUD_UP)

# Default: LOCKED (safe)
GPIO.output(RELAY_PIN, RELAY_LOCKED_STATE)
GPIO.output(LED_PIN, GPIO.LOW)

# --- PERIPHERAL SETUP ---
lcd = None
gps_serial = None
gsm_serial = None

try:
    lcd = CharLCD(i2c_expander='PCF8574', address=0x27, port=1, cols=16, rows=2)
    lcd.clear()
except Exception:
    print("[LCD] Not connected")

try:
    gps_serial = serial.Serial(GPS_PORT, baudrate=9600, timeout=0.1)
    gsm_serial = serial.Serial(GSM_PORT, baudrate=9600, timeout=1)
except Exception:
    print("[Serial] GPS/GSM not detected")

current_lat = "No GPS Fix"
current_lon = ""

# --- HELPER FUNCTIONS ---
def safe_lcd_write(line1, line2=""):
    if lcd:
        try:
            lcd.clear()
            lcd.write_string(line1.ljust(16))
            lcd.cursor_pos = (1, 0)
            lcd.write_string(line2.ljust(16))
        except: pass

def update_gps():
    global current_lat, current_lon
    if not gps_serial or not gps_serial.is_open:
        return
    while gps_serial.in_waiting > 0:
        try:
            line = gps_serial.readline().decode('utf-8', errors='replace').strip()
            if line.startswith('$GPGGA'):
                msg = pynmea2.parse(line)
                if msg.gps_qual > 0:
                    current_lat = str(round(msg.latitude, 5))
                    current_lon = str(round(msg.longitude, 5))
        except: pass

def send_sms_alert():
    if not gsm_serial or not gsm_serial.is_open:
        safe_lcd_write("SMS FAILED", "GSM Error")
        return
    safe_lcd_write("ALARM! Sending SMS", f"Loc: {current_lat}")
    try:
        gsm_serial.write(b'AT+CMGF=1\r\n')
        time.sleep(0.5)
        gsm_serial.write(f'AT+CMGS="{TARGET_PHONE_NUMBER}"\r\n'.encode())
        time.sleep(0.5)
        loc_msg = "No GPS Fix" if current_lat == "No GPS Fix" else f"https://maps.google.com/?q={current_lat},{current_lon}"
        msg = f"ALERT! Alcohol detected.\nVehicle locked.\nLocation: {loc_msg}"
        gsm_serial.write(msg.encode())
        gsm_serial.write(bytes([26]))  # Ctrl+Z
        time.sleep(3)
    except Exception:
        pass

# --- MAIN SYSTEM ---
def start_system():
    print("\n--- VEHICLE INTERLOCK ACTIVE ---")
    safe_lcd_write("INTERLOCK ACTIVE", "Blow Now! (5s)")
    GPIO.output(RELAY_PIN, RELAY_LOCKED_STATE)

    start_time = time.time()
    while time.time() - start_time < TEST_WINDOW:
        mq3_state = GPIO.input(MQ3_D0_PIN)
        update_gps()
        remaining = int(TEST_WINDOW - (time.time() - start_time))
        print(f"Time {remaining}s | D0: {'ALARM' if mq3_state==MQ3_D0_ALARM_THRESHOLD else 'Clear'} | GPS: {current_lat}", end="\r")

        if mq3_state == MQ3_D0_ALARM_THRESHOLD:
            print("\nâŒ Alcohol detected! Locking vehicle.")
            GPIO.output(RELAY_PIN, RELAY_LOCKED_STATE)
            GPIO.output(LED_PIN, GPIO.HIGH)
            send_sms_alert()
            safe_lcd_write("TEST FAILED!", "SYSTEM LOCKED")
            while True:
                update_gps()
                time.sleep(1)
        safe_lcd_write(f"BLOW NOW {remaining}s", f"D0: {'ALARM' if mq3_state==MQ3_D0_ALARM_THRESHOLD else 'Clear'}")
        time.sleep(0.2)

    # TEST PASSED
    print("\nâœ… TEST PASSED. UNLOCKING VEHICLE.")
    GPIO.output(RELAY_PIN, RELAY_UNLOCKED_STATE)
    GPIO.output(LED_PIN, GPIO.LOW)
    safe_lcd_write("TEST PASSED", "DRIVE SAFELY")

# --- RUN ---
if __name__ == "__main__":
    try:
        start_system()
        while True:
            update_gps()
            time.sleep(1)
    except KeyboardInterrupt:
        print("\n[System] Exiting")
    finally:
        print("\nLocking vehicle & cleaning GPIO.")
        GPIO.output(RELAY_PIN, RELAY_LOCKED_STATE)
        GPIO.cleanup()
